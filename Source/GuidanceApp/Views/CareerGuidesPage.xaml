<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GuidanceApp.Views.CareerGuidesPage"
    xmlns:vm="clr-namespace:GuidanceApp.ViewModels"
    Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:CareerGuidesViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="16,25,16,40" Spacing="10">

                <Button x:Name="CarCru" Margin="0,10,0,0" Text="Career Cruising" Command="{Binding OpenCc}" BackgroundColor="#66c2ff" TextColor="White" FontAttributes="Bold"/>
                
                <Button x:Name="Xello" Margin="0,10,0,0" Text="Xello" Command="{Binding OpenXello}" BackgroundColor="#66c2ff" TextColor="White" FontAttributes="Bold"/>

            </StackLayout>

        </ScrollView>
    </Grid>


</ContentPage>