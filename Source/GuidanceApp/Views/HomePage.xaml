<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
    x:Class="GuidanceApp.Views.HomePage"
    BackgroundImageSource="Mountain2.jpg"
    
    xmlns:vm="clr-namespace:GuidanceApp.ViewModels"
    Title="{Binding Title}">
<ContentPage.BindingContext>
   <vm:HomeViewModel />
</ContentPage.BindingContext>
<Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions><RowDefinition Height="*" />
    </Grid.RowDefinitions>


<StackLayout Orientation="Vertical" Padding="0,10,0,40" Spacing="10">
<Label Text="WELCOME TO"
           TextColor="White"
           FontAttributes="Bold"
           FontFamily="Helvetica"
           FontSize="25"
           HorizontalTextAlignment="Center">


</Label>
<Label Text="EAHS STUDENT RESOURCES"
       TextColor="White"
       FontSize="Title"
       FontAttributes="Bold"
       FontFamily="Helvetica"
       HorizontalTextAlignment="Center">


</Label>
    <AbsoluteLayout>
    <BoxView Color="#A61C00" HeightRequest="25" WidthRequest="415">


    </BoxView>

    </AbsoluteLayout>

<Label Text=" >> Request an appointment"
       TextColor="White"
       FontSize="20"
       
       FontFamily="Helvetica"
       HorizontalTextAlignment="Start">


</Label>











</StackLayout>
</Grid>


</ContentPage>
